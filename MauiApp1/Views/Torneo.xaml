<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.Torneo"
             xmlns:MyCode="clr-namespace:MauiApp1.Views"
             Title="Torneo">
    <VerticalStackLayout
        x:Name="TorneoLayout"
        Margin="15"
        Padding="30,30,30,30">
        
        <Label 
            x:Name="creaLbl"
            Text="Crea un torneo"
            FontSize="18"
            TextColor="#D466A3"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            HeightRequest="50"/>
        <Button
            x:Name="CrearBtn"
            Text="Crear"
            HorizontalOptions="Center"
            HeightRequest="40"/>
        <Label 
            Text="Tus Torneos"
            FontSize="18"
            TextColor="#D466A3"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            Margin="0,40,0,15"/>
        <ContentView>
            <MyCode:TorneoDetalle></MyCode:TorneoDetalle>
        </ContentView>
        <ContentView>
            <MyCode:TorneoDetalle></MyCode:TorneoDetalle>
        </ContentView>




    </VerticalStackLayout>
</ContentPage>